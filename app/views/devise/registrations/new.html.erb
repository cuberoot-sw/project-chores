<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :Username %></div>
  <div><%= f.text_field :name,:placeholder => "Your Username"%></div><br>


  <div><%= f.label :email %>
  <%= f.email_field :email, :placeholder => "Email Id for Login" %></div><br>

  <div><%= f.label :password %>
  <%= f.password_field :password, :placeholder => "Assign Password" %></div><br>

  <div><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, :placeholder => "Re-type Password" %></div><br>

    <div><%= f.submit "Sign up", :class => "btn btn-primary" %></div>
<% end %>

<%= render "devise/shared/links" %>
